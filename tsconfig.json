{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["node"]
	},
	"include": ["src/**/*", "drizzle.config.ts", "sst.config.ts", "sst-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
